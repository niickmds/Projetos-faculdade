<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.ativalunojavafx.Entidades.Textos.ListaAlunosController"
      alignment="CENTER" spacing="20.0" stylesheets="@styles.css">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="40.0"/>
    </padding>

    <ListView fx:id="listaAlunosListView" prefHeight="400.0" prefWidth="600.0" onMouseClicked="#ClicarLista"/>

    <Button text="Nome Normal" onAction="#exibirNomeNormal"/>
    <Button text="Inverter Nome" onAction="#inverterTexto"/>
    <Button text="Nome Biblio." onAction="#nomeBibliografico"/>

    <TextArea fx:id="listaAlunosTextArea" editable="false" prefHeight="600.0" prefWidth="600.0"/>
</VBox>
